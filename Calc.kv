MainWidget:

<MainWidget>:
    
    orientation: "vertical"
    Label:
        text: root.result_txt
        font_size: "32dp"
        text_size: root.width, None
        halign: 'right'
        valign: 'bottom'
        padding_x: 10
        size_hint: 1, 0.3
        size: self.texture_size
    GridLayout:
        rows: 7
        cols: 4
        color: 1, 0, 0, 1
        Button:
            text: "%"
            font_size: "21dp"
            on_press: root.button_percent()
        Button:
            text: "+/-"
            font_size: "21dp"
            on_press: root.button_plus_minus()
        Button:
            text: "C"
            font_size: "21dp"
            on_press: root.button_c()
        Button:
            text: "<---"
            font_size: "21dp"
            on_press: root.button_backspace()
        Button:
            text: "1/x"
            font_size: "21dp"
            on_press: root.button_one_divided_by()
        Button:
            text: "x2"
            font_size: "21dp"
            on_press: root.button_exponentation()
        Button:
            text: "sqrt(x)"
            on_press: root.button_square_root()
            font_size: "21dp"
        Button:
            text: "/"
            font_size: "21dp"
            on_press: root.call_operation("/")
        Button:
            text: "7"
            on_press: root.call_number("7")
            font_size: "21dp"
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "8"
            on_press: root.call_number("8")
            font_size: "21dp"
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "9"
            font_size: "21dp"
            on_press: root.call_number("9")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "X"
            font_size: "21dp"
            on_press: root.call_operation("*")
        Button:
            text: "4"
            font_size: "21dp"
            on_press: root.call_number("4")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "5"
            font_size: "21dp"
            on_press: root.call_number("5")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "6"
            font_size: "21dp"
            on_press: root.call_number("6")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "-"
            font_size: "21dp"
            on_press: root.call_operation("-")
        Button:
            text: "1"
            font_size: "21dp"
            on_press: root.call_number("1")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "2"
            font_size: "21dp"
            on_press: root.call_number("2")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "3"
            font_size: "21dp"
            on_press: root.call_number("3")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "+"
            on_press: root.call_operation("+")
            font_size: "21dp"
        Button:
            text: "000"
            font_size: "21dp"
            on_press: root.button_000()
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "0"
            font_size: "21dp"
            on_press: root.call_number("0")
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "."
            font_size: "21dp"
            on_press: root.button_coma()
            background_color: 0.470, 0.470, 0.470
        Button:
            text: "="
            font_size: "21dp"
            on_press: root.button_equals()
            background_color: 0.992, 0.623, 0.031
            
